.comment {
  padding: 20px;
  margin-top: 20px;
  border-top: 1px solid #999;
  border-bottom: 1px solid #999;
}
.comment .authorInfo {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.comment .authorInfo .avator {
  width: 50px;
  height: 50px;
  -webkit-border-radius: 50%;
          border-radius: 50%;
}
.comment .authorInfo .user {
  padding-left: 15px;
}
.comment .authorInfo .user .Name {
  font-size: 16px;
}
.comment .authorInfo .user .Name .reply-text {
  margin: 0 10px;
  font-weight: 600;
  color: #000;
}
.comment .authorInfo .user .CreateTime {
  padding-top: 10px;
  font-size: 14px;
  color: #999;
}
.comment .content {
  padding-top: 15px;
  font-size: 16px;
  font-weight: 400;
  padding-bottom: 10px;
}
.comment .aaa {
  font-size: 12px;
  margin-top: 30px;
  margin-left: 10px;
  padding: 2px 3px;
  -webkit-border-radius: 5px;
          border-radius: 5px;
  border: 1px solid #999;
  color: #999;
}
.comment .reply-content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin: 15px 0;
  padding: 0 10px;
  border: 1px solid #eee;
}

